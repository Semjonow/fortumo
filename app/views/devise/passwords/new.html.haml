.row-fluid{ :id => "reset-password-form-container" }
  .span6
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name),
      :html => { :autocomplete => :off, :class => "form-horizontal" }) do |f|
      %fieldset
        %legend Forgot your password?
        
        = f.input :email, :required => true, :placeholder => "john.smith@example.com", :autofocus => true
        
        .form-actions
          .row= f.button :submit, "Send me reset password instructions", :class => "btn btn-primary"
  = render "links"
