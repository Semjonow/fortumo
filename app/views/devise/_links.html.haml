.span6.well{ :id => "app-auth-nav-container" }
  %ul{ :class => "nav nav-list" }
    %li{ :class => "nav-header" } Application authentication
    %li{ :class => "#{ controller_name == 'sessions' ? 'active' : 'non-active' }" }
      = link_to new_session_path(resource_name) do
        %i{ :class => "icon-lock" }
        Sign in
    %li
      = link_to "/auth/facebook" do
        %i{ :class => "icon-signal" }
        Sign in via Facebook    
    - if devise_mapping.registerable?
      %li{ :class => "#{ controller_name == 'registrations' ? 'active' : 'non-active' }" }
        = link_to new_registration_path(resource_name) do
          %i{ :class => "icon-user" }
          Sign up
    - if devise_mapping.recoverable?
      %li{ :class => "#{ controller_name == 'passwords' ? 'active' : 'non-active' }" }
        = link_to new_password_path(resource_name) do
          %i{ :class => "icon-cog" }
          Forgot your password?
    - if devise_mapping.confirmable?
      %li{ :class => "#{ controller_name == 'confirmations' ? 'active' : 'non-active' }" }
        = link_to new_confirmation_path(resource_name) do
          %i{ :class => "icon-envelope" }
          Didn't receive confirmation instructions?
